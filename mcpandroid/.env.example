# Environment Configuration Template
# Copy this file to .env for local development
# NEVER commit .env to version control

# ==================================
# Environment
# ==================================
# Options: development, preview, production
# Default: development (if not set)
EXPO_PUBLIC_ENVIRONMENT=development

# ==================================
# Sentry Crash Reporting
# ==================================
# Get your DSN from https://sentry.io
# Leave empty to disable Sentry
EXPO_PUBLIC_SENTRY_DSN=

# ==================================
# Feature Flags
# ==================================
# Enable/disable features per environment
# Options: true, false
EXPO_PUBLIC_TAILSCALE_ENABLED=true
EXPO_PUBLIC_CRASH_REPORTING_ENABLED=false
EXPO_PUBLIC_ANALYTICS_ENABLED=false
EXPO_PUBLIC_DEBUG_LOGS_ENABLED=true

# ==================================
# Server Configuration
# ==================================
# Maximum number of concurrent servers
# Use 'auto' for device RAM-based calculation
# Or specify a number (e.g., 2, 4, 8)
EXPO_PUBLIC_MAX_SERVERS=auto

# Default port for first server (increments for additional servers)
EXPO_PUBLIC_DEFAULT_PORT=3000

# Base memory allocation per server (MB)
EXPO_PUBLIC_SERVER_BASE_MEMORY_MB=512

# State reconciliation polling interval (ms)
EXPO_PUBLIC_RECONCILIATION_INTERVAL_MS=30000

# ==================================
# Network Configuration
# ==================================
# HTTP request timeout (ms)
EXPO_PUBLIC_REQUEST_TIMEOUT_MS=30000

# Number of retry attempts for failed requests
EXPO_PUBLIC_RETRY_ATTEMPTS=3

# GitHub API rate limit (requests per hour)
# Free tier: 60/hour, Authenticated: 5000/hour
EXPO_PUBLIC_GITHUB_RATE_LIMIT_PER_HOUR=60

# ==================================
# Security Configuration
# ==================================
# Use SecureStore for sensitive data (recommended: true)
EXPO_PUBLIC_USE_SECURE_STORE=true

# Enable certificate pinning for GitHub API (recommended: true)
EXPO_PUBLIC_CERTIFICATE_PINNING_ENABLED=true

# Enable IPC message validation (recommended: true)
EXPO_PUBLIC_IPC_VALIDATION_ENABLED=true

# ==================================
# Development Tools
# ==================================
# Enable React Native Debugger
# Options: true, false
EXPO_PUBLIC_ENABLE_DEBUGGER=false

# Enable performance monitoring
# Options: true, false
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ==================================
# Notes
# ==================================
# - All variables prefixed with EXPO_PUBLIC_ are accessible in the app
# - Variables without EXPO_PUBLIC_ are only available during build time
# - Boolean values should be strings: "true" or "false"
# - Numbers should be strings: "3000", "512", etc.
# - Changes to .env require app restart (expo start --clear)
